{
  "models": {
    "mode": "merge",
    "providers": {
      "nearai": {
        "baseUrl": "${NEARAI_API_URL}",
        "apiKey": "${NEARAI_API_KEY}",
        "auth": "api-key",
        "api": "openai-completions",
        "models": [
          {
            "id": "auto",
            "name": "auto"
          }
        ]
      }
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "nearai/auto"
      },
      "models": {
        "nearai/auto": {}
      },
      "workspace": "/home/agent/openclaw",
      "contextTokens": 115200,
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "bootstrapMaxChars": 48000,
      "blockStreamingDefault": "on",
      "blockStreamingBreak": "text_end",
      "blockStreamingChunk": { "minChars": 200, "maxChars": 600 },
      "blockStreamingCoalesce": { "idleMs": 150 },
      "humanDelay": { "mode": "natural" },
      "typingMode": "thinking"
    }
  },
  "update": {
    "checkOnStart": false
  },
  "gateway": {
    "mode": "local",
    "auth": {
      "mode": "token",
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "bind": "${OPENCLAW_GATEWAY_BIND}",
    "port": 18789,
    "http": {
      "endpoints": {
        "chatCompletions": {
          "enabled": true
        },
        "responses": {
          "enabled": true
        }
      }
    }
  }
}
